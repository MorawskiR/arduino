#include <Servo.h>
//servos declare 
Servo myservo1;  
Servo myservo2;  
Servo myservo3;  
Servo myservo4;  
Servo myservo5;  
char  wartosc;
int potpin = 0; 
int val;   
int k = 0;
void setup() 
{
Serial.begin(9600);
Serial.print("Kolejno odlicz!");
myservo1.attach(9); 
myservo2.attach(5); 
myservo3.attach(3); 
myservo4.attach(6); 
myservo5.attach(11);

 myservo1.write(0);
 myservo2.write(0);
 myservo3.write(0);
 myservo4.write(0);
 myservo5.write(0);
}


void loop() 
{

if (Serial.available() > 0) 
  {
    wartosc = Serial.read();
  //  Serial.print(wartosc);
   if(wartosc == '1')
    {
      Serial.println("pedal 2");
 myservo1.write(180);
 myservo2.write(180);
 myservo3.write(180);
 myservo4.write(180);
 myservo5.write(180);
    }
   if(wartosc=='2')
   {
      Serial.println("pedal 2");
 myservo1.write(90);
 myservo2.write(90);
 myservo3.write(90);
 myservo4.write(90);
 myservo5.write(90);
   }
  }
   

  }

